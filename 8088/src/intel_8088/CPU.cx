package intel_8088;

network CPU {
	import intel_8088.eu.ExecutionUnit;
	import intel_8088.biu.BusInterfaceUnit;

	in u8 addrLow_in;

	out sync u8 addrLow_out;
	out u12 addrHigh;

	out bool rd, wr;
	
	biu = new BusInterfaceUnit();
	biu.reads(eu.addr, eu.data_out, addrLow_in);

	eu = new ExecutionUnit();
	eu.reads(biu.instr, biu.eu_data_out);

	this.reads(biu.addrLow_out, biu.addrHigh, biu.rd, biu.wr);

}
